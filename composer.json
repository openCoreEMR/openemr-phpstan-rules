{
    "name": "openemr/phpstan-openemr-rules",
    "description": "PHPStan rules for OpenEMR core and module development",
    "license": "GPL-3.0-or-later",
    "type": "phpstan-extension",
    "keywords": [
        "phpstan",
        "static-analysis",
        "openemr",
        "code-quality"
    ],
    "authors": [
        {
            "name": "Michael A. Smith",
            "email": "michael@opencoreemr.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "phpstan/phpstan": "^2.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.42",
        "squizlabs/php_codesniffer": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "OpenCoreEMR\\PHPStan\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    },
    "extra": {
        "phpstan": {
            "includes": [
                "module.neon"
            ]
        }
    },
    "scripts": {
        "check": [
            "@phpcs",
            "@phpstan"
        ],
        "php-lint": "find src -name '*.php' -print0 | xargs -0 -n1 php -l",
        "phpcbf": "phpcbf",
        "phpcs": "phpcs",
        "phpstan": "phpstan analyse -c phpstan.neon src"
    }
}
